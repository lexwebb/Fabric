@{
    ViewData["Title"] = "";
}

<div id="app-root">
    <div class="loading">
        <div class="loader"></div>
    </div>
</div>

<style>
    .loading {
        background: #fff;
        bottom: 0;
        left: 0;
        position: fixed;
        right: 0;
        top: 0;
    }

    .loader {
        animation: spin 1.1s infinite linear;
        border: .8em solid rgba(218, 219, 223, 1);
        border-left: .8em solid rgba(58, 166, 165, 1);
        font-size: 10px;
        left: 50%;
        margin-left: -4em;
    }

    .loader, .loader:after {
        border-radius: 50%;
        display: block;
        height: 8em;
        margin-top: -4.05em;
        position: absolute;
        top: 50%;
        width: 8em;
    }

    @@keyframes spin {
        0% { transform: rotate(360deg); }

        100% { transform: rotate(0deg); }
    }
</style>

@section scripts {
    <script src="~/dist/main.js" asp-append-version="true"></script>
}